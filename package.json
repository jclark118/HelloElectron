{
  "name": "helloworld",
  "version": "1.0.0",
  "description": "the most basic electron app possible",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "test",
    "ensure-jre": "node ensure-jre.js",
    "build:mac": "electron-builder --mac --arm64",
    "build:linux": "npm run ensure-jre && export FPM_DEBUG=true && electron-builder --linux rpm --x64",
    "build:linux:nojre": "npm run clean && electron-builder --linux rpm --x64 -c.asar=false -c.asarUnpack=",
    "build:linux:systemfpm": "npm run ensure-jre && export CUSTOM_FPM_PATH=\"$PWD/fpm-wrapper.sh\" && export FPM_DEBUG=true && electron-builder --linux rpm --x64",
    "clean": "rm -rf jre dist"
  },
  "author": {
    "name": "Test User",
    "email": "test@github.com"
  },
  "homepage": "github.com",
  "license": "ISC",
  "devDependencies": {
    "electron": "37.6.1",
    "electron-builder": "26.3.3"
  },
  "build": {
    "appId": "com.example.helloworld",
    "asar": true,
    "asarUnpack": [
      "jre"
    ],
    "productName": "HelloWorld",
    "mac": {
      "target": "dmg",
      "artifactName": "${productName}-${version}-arm64.${ext}"
    },
    "linux": {
      "target": "rpm",
      "artifactName": "${productName}-${version}-x64.${ext}"
    }
  }
}
